@model TreeWeb.Application.ViewModels.CategoryCreateEditViewModel

@{
    string pageTitle = Model.CategoryId == 0 ? "Create Category" : "Edit Category";
    string formAction = Model.CategoryId == 0 ? "Create" : "Edit";
}

<h2 class="text-2xl font-bold">@pageTitle</h2>

<form asp-action="@formAction" method="post" class="mt-4">
    <div asp-validation-summary="ModelOnly" class="text-red-500"></div>

    @if (Model.CategoryId != 0)
    {
        <input type="hidden" asp-for="CategoryId" />
    }

    <div class="mt-4">
        <label asp-for="Name" class="block text-gray-700 font-semibold"></label>
        <input asp-for="Name" class="form-input mt-1 block w-full rounded-md border-black	" />
        <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
    </div>
    <div class="mt-4">
        <!-- Add additional fields for the category as needed -->
    </div>
    <div class="mt-4">
        <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600">Save</button>
    </div>
</form>
