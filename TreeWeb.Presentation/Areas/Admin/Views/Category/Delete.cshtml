@model TreeWeb.Core.Entities.Category

<h2 class="text-2xl font-bold">Delete Category</h2>

<div class="mt-4">
    <h3 class="text-xl font-semibold">Are you sure you want to delete this category?</h3>
    <div class="mt-4">
        <h4 class="text-lg font-semibold">Category ID: @Model.CategoryId</h4>
        <hr class="my-4 border-t border-gray-300" />
        <dl class="grid grid-cols-2 gap-x-4">
            <dt class="font-semibold">Name:</dt>
            <dd>@Model.Name</dd>
        </dl>
    </div>
    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="CategoryId" />
        <button type="submit" class="px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 focus:outline-none focus:bg-red-600 mr-4">Delete</button>
        <a asp-action="Index" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400 focus:outline-none focus:bg-gray-400">Cancel</a>
    </form>
</div>
