@model TreeWeb.Application.ViewModels.ProductCreateEditViewModel

<h2 class="text-2xl font-bold mb-4">Edit Product</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="max-w-lg mx-auto">
    <input type="hidden" asp-for="ProductId" />

    <div class="mb-4">
        <label asp-for="Name" class="block text-gray-700 font-semibold mb-1"></label>
        <input asp-for="Name" class="form-input w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" />
        <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Description" class="block text-gray-700 font-semibold mb-1"></label>
        <textarea asp-for="Description" class="form-textarea w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50"></textarea>
        <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Price" class="block text-gray-700 font-semibold mb-1"></label>
        <input asp-for="Price" class="form-input w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" />
        <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Quantity" class="block text-gray-700 font-semibold mb-1"></label>
        <input asp-for="Quantity" class="form-input w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" />
        <span asp-validation-for="Quantity" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="CategoryId" class="block text-gray-700 font-semibold mb-1"></label>
        <select asp-for="CategoryId" class="form-select w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" asp-items="@(new SelectList(Model.Categories, "CategoryId", "Name"))">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="SupplierId" class="block text-gray-700 font-semibold mb-1"></label>
        <select asp-for="SupplierId" class="form-select w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" asp-items="@(new SelectList(Model.Suppliers, "SupplierId", "Name"))">
            <option value="">-- Select Supplier --</option>
        </select>
        <span asp-validation-for="SupplierId" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Image" class="block text-gray-700 font-semibold mb-1"></label>
        <input asp-for="Image" type="file" class="form-input w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" />
        <span asp-validation-for="Image" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600">Save</button>
        <a asp-action="Index" class="bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600">Back to List</a>
    </div>
</form>
